<%= render "shared/header" %>
<h1>トップページ</h1>
    <% @task_categories.each do |task_category| %>
      <%= link_to task_category.title, task_category_path(task_category.id), method: :get %>
      <%= link_to task_category.deadline, task_category_path(task_category.id), method: :get %>
      <%= link_to task_category.user.name, task_category_path(task_category.id), method: :get %>
      <%= link_to '詳細', task_category_path(task_category.id), method: :get  %>
      <%= link_to '編集', edit_task_category_path(task_category.id) %>
      <%= link_to '削除', task_category_path(task_category.id), method: :delete, data: { confirm: '削除してよろしいですか？' } %>
   <% end %>